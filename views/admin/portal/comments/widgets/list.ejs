<tr>
  <td><%= serial_number; %></td>
  <td><%= result.name; %></td>
  <td><%= result.email; %></td>
  <td><%= result.description; %></td>
  <td>
    <% if (result.isActive) { %>
    <span class="badge badge-success">Active</span>
    <% } else { %>
    <span class="badge badge-danger">Inactive</span>
    <% } %>
  </td>
  <td><%= new Date(result.createdAt).toLocaleString(); %></td>

  <td>
    <div class="d-flex align-items-center" style="gap: 5px;">
      <button type="button" class="btn btn-danger" onclick="removeData(this, '/admin/portal/comments?id=<%= result._id; %>')"><i class="bi bi-trash"></i></button>
    </div>
  </td>

</tr>